                    <ListBox x:Name="featureList" Margin="654.364,334,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="320" Height="200" Grid.Column="1"/>
                    <Label x:Name="selectedBusinessLabel" Content="Selected Business"  HorizontalAlignment="Left" Margin="255.364,327,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <Rectangle HorizontalAlignment="Left" Height="119" Margin="255.364,334,0,0" Stroke="Black" VerticalAlignment="Top" Width="385" Grid.Column="1"/>
                    <TextBox x:Name="selectedBusinessName" HorizontalAlignment="Left" Margin="270.364,353,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="347" Height="19" Grid.Column="1"/>
                    <TextBox x:Name="selectedBusinessAddress" HorizontalAlignment="Left" Margin="270.364,377,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="347" Height="19" Grid.Column="1"/>
                    <TextBox x:Name="selectedBusinessHours" HorizontalAlignment="Left" Margin="270.364,401,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="347" Height="35" Grid.Column="1"/>
                    <Button x:Name="checkinButton" Content="Show Check-ins" HorizontalAlignment="Left" Margin="1045.364,334,0,0" VerticalAlignment="Top" Height="42" Width="83" Click="checkinButton_Click" Grid.Column="1"/>
                    <Button x:Name="tipsButton" Content="Show Tips" HorizontalAlignment="Left" Margin="1045.364,432,0,0" VerticalAlignment="Top" Height="42" Width="83" Click="tipsButton_Click" Grid.Column="1"/>
                </Grid>
            </TabItem>
        </TabControl>

    </Grid>
</Window>
