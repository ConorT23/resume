                    <Label x:Name="votesLabel" Content="Votes:" HorizontalAlignment="Left" Margin="245,101,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="funnyVotesLabel" Content="Funny:" HorizontalAlignment="Left" Margin="308,101,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="coolVotesLabel" Content="Cool:" HorizontalAlignment="Left" Margin="362,101,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="usefulVotesLabel" Content="Useful:" HorizontalAlignment="Left" Margin="408,101,0,0" VerticalAlignment="Top"/>
