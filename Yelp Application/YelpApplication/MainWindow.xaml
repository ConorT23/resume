                    <ListBox x:Name="useridList" Margin="22,59,0,0" Width="218" Height="180" HorizontalAlignment="Left" VerticalAlignment="Top" SelectionChanged="useridList_SelectionChanged"/>
                    <Label x:Name="friendLabel" Content="Friends" HorizontalAlignment="Left" Margin="24,242,0,0" VerticalAlignment="Top"/>
                    <DataGrid x:Name="friendsList"  Margin="24,268,0,0" Width="430" Height="270" HorizontalAlignment="Left" VerticalAlignment="Top"/>
                    <Label x:Name="userInfoLabel" Content="User Information" HorizontalAlignment="Left" Margin="245,10,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="nameLabel" Content="Name:" HorizontalAlignment="Left" Margin="245,32,0,0" VerticalAlignment="Top"/>
