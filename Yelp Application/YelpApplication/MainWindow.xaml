                    <TextBox x:Name="usefulVotesText" HorizontalAlignment="Left" Margin="408,124,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="45"/>
                    <Label x:Name="tipCountLabel" Content="Tip Count:" HorizontalAlignment="Left" Margin="245,144,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="tipCountText" HorizontalAlignment="Left" Margin="332,147,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="122"/>
                    <Label x:Name="tipLikesLabel" Content="Total Tip Likes:" HorizontalAlignment="Left" Margin="245,162,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="tipLikesText" HorizontalAlignment="Left" Margin="332,170,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="121"/>
                    <Label x:Name="locationLabel" Content="Location:" HorizontalAlignment="Left" Margin="254,180,0,0" VerticalAlignment="Top"/>
                    <Label x:Name="latLabel" Content="Lat:" HorizontalAlignment="Left" Margin="245,203,0,0" VerticalAlignment="Top" Width="30"/>
                    <TextBox x:Name="latText" HorizontalAlignment="Left" Margin="289,206,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="114"/>
                    <Label x:Name="longLabel" Content="Long:" HorizontalAlignment="Left" Margin="245,221,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="longText" HorizontalAlignment="Left" Margin="289,229,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="114"/>
                    <Button x:Name="editButton" Content="Edit" HorizontalAlignment="Left" Margin="408,206,0,0" VerticalAlignment="Top" Width="46" Height="18"/>
                    <Button x:Name="updateButton" Content="Update" HorizontalAlignment="Left" Margin="408,229,0,0" VerticalAlignment="Top" Width="46" Height="18" Click="updateButton_Click"/>
