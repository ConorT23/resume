                    <Button x:Name="removeButton" Content="Remove" HorizontalAlignment="Left" Margin="63.364,372,0,0" VerticalAlignment="Top" Width="49" Click="removeButton_Click" Grid.Column="1"/>
                    <ListBox x:Name="selectedCategoryList"  Margin="5.364,392,0,0" HorizontalAlignment="Left" VerticalAlignment="Top" Width="220" Height="60" Grid.Column="1"/>
                    <Button x:Name="searchButton" Content="Search Businesses" HorizontalAlignment="Left" Margin="5.364,458,0,0" VerticalAlignment="Top" Width="106" Click="searchButton_Click" Grid.Column="1"/>
                    <Label x:Name="businessQuantityLabel" Content="# of businesses" HorizontalAlignment="Left" Margin="411.364,10,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <Label x:Name="businessQuantityText" Content="" HorizontalAlignment="Left" Margin="517.364,10,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <Label x:Name="priceFilterLabel" Content="Filter by Price:" HorizontalAlignment="Left" Margin="995.364,10,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <CheckBox x:Name="price1" Content="$" HorizontalAlignment="Left" Margin="995.364,41,0,0" VerticalAlignment="Top" Checked="price1_Checked" Grid.Column="1"/>
                    <CheckBox x:Name="price2" Content="$$" HorizontalAlignment="Left" Margin="995.364,61,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <CheckBox x:Name="price3" Content="$$$" HorizontalAlignment="Left" Margin="1045.364,41,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <CheckBox x:Name="price4" Content="$$$$" HorizontalAlignment="Left" Margin="1045.364,61,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <Label x:Name="attributeFilterLabel" Content="Filter by Attributes:" HorizontalAlignment="Left" Margin="795.364,81,0,0" VerticalAlignment="Top" Width="113" Grid.Column="1"/>
                    <Label x:Name="mealFilterLabel" Content="Filter by Meal:" HorizontalAlignment="Left" Margin="995.364,81,0,0" VerticalAlignment="Top" Width="107" Grid.Column="1"/>
                    <CheckBox x:Name="attr1" Content="Accepts Credit Cards" HorizontalAlignment="Left" Margin="795.364,106,0,0" VerticalAlignment="Top" Checked="attr1_Checked" Grid.Column="1"/>
                    <CheckBox x:Name="attr2" Content="Takes Reservations" HorizontalAlignment="Left" Margin="795.364,126,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <CheckBox x:Name="attr3" Content="Wheelchair Accessible" HorizontalAlignment="Left" Margin="795.364,146,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <CheckBox x:Name="attr4" Content="Outdoor Seating" HorizontalAlignment="Left" Margin="795.364,166,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <CheckBox x:Name="attr5" Content="Good for Kids" HorizontalAlignment="Left" Margin="795.364,186,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <CheckBox x:Name="attr6" Content="Good for Groups" HorizontalAlignment="Left" Margin="795.364,206,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <CheckBox x:Name="attr7" Content="Delivery" HorizontalAlignment="Left" Margin="795.364,225,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <CheckBox x:Name="attr8" Content="Take Out" HorizontalAlignment="Left" Margin="795.364,245,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <CheckBox x:Name="attr9" Content="Free Wifi" HorizontalAlignment="Left" Margin="795.364,265,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <CheckBox x:Name="attr10" Content="Bike Parking" HorizontalAlignment="Left" Margin="795.364,285,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <CheckBox x:Name="meal1" Content="Breakfast" HorizontalAlignment="Left" Margin="995.364,106,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <CheckBox x:Name="meal2" Content="Lunch" HorizontalAlignment="Left" Margin="995.364,126,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <CheckBox x:Name="meal3" Content="Brunch" HorizontalAlignment="Left" Margin="995.364,146,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.531,0.486" Grid.Column="1"/>
                    <CheckBox x:Name="meal4" Content="Dinner" HorizontalAlignment="Left" Margin="995.364,166,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <CheckBox x:Name="meal5" Content="Dessert" HorizontalAlignment="Left" Margin="995.364,186,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <CheckBox x:Name="meal6" Content="Late Night" HorizontalAlignment="Left" Margin="995.364,206,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <Label x:Name="sortByLabel" Content="Sort Results By:" HorizontalAlignment="Left" Margin="995.364,245,0,0" VerticalAlignment="Top" Grid.Column="1"/>
