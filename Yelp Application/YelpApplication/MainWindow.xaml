                    <Label x:Name="stateLabel" Content="State" HorizontalAlignment="Left" Margin="5.364,30,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <ComboBox x:Name="stateList" HorizontalAlignment="Left" Margin="50.364,34,0,0" VerticalAlignment="Top" Width="175" Height="20" SelectionChanged="stateList_SelectionChanged_1" Grid.Column="1"/>
                    <Label x:Name="cityLabel" Content="City" HorizontalAlignment="Left" Margin="5.364,50,0,0" VerticalAlignment="Top" Grid.Column="1"/>
                    <ListBox x:Name="cityList"  Margin="5.364,76,0,0" Width="220" Height="76" SelectionChanged="cityList_SelectionChanged" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.Column="1"/>
