                    <Label x:Name="starsLabel" Content="Stars:" HorizontalAlignment="Left" Margin="245,58,0,0" VerticalAlignment="Top"/>
                    <TextBox x:Name="starsText" HorizontalAlignment="Left" Margin="288,62,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="45" Height="18"/>
